{
  "python.linting.mypyEnabled": true,
  "python.linting.enabled": true,
  "python.formatting.provider": "none",
  "editor.formatOnSave": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.python"
  },
  "clangd.arguments": [
    "--background-index",
    "-j=4",
    "--query-driver=/usr/bin/clang++"
  ]
}
